# Mind-Swarm Configuration

# AI Model Configuration
# These are preset names defined in ai_presets.yaml
LOCAL_AI_PRESET=local_explorer      # Preset for local/exploration AI
PREMIUM_AI_PRESET=smart_balanced    # Preset for premium/task AI

# API Keys (only needed for premium models)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Subspace Configuration
SUBSPACE_ROOT=/home/user/mind-swarm/subspace
MAX_AGENTS=5
AGENT_MEMORY_LIMIT_MB=512
AGENT_CPU_LIMIT_PERCENT=20

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Truncation Controls (queries/log previews only)
# 0 disables truncation. Working memory and pipeline outputs are never truncated.
# These values only affect search query strings and log/preview snippets.
KNOWLEDGE_QUERY_TRUNCATE_CHARS=400
WORKING_MEMORY_TRUNCATE_CHARS=300
OUTPUT_EXCERPT_TRUNCATE_CHARS=300
